\def\@makechapterhead#1{%
  \vspace*{-40\p@}%
  {\parindent \z@ \filleft \normalfont
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        %\huge\bfseries \@chapapp\space \thechapter
       \LARGE\bfseries {\color{gray}\thechapter }\space%
        %\par\nobreak
        %\vskip 20\p@
      \fi
    \fi
    \interlinepenalty\@M
    \LARGE\color{reddy} \bfseries #1\par\nobreak
    \vskip 20\p@
  }}
\makeatother
  
%Daggers
\newcounter{dfootnote}
\newcommand*{\dfootnote}[1]{%
    \setcounter{dfootnote}{\value{footnote}}%
    \renewcommand*{\thefootnote}{\fnsymbol{footnote}}%
    \footnote[2]{#1}%
    \setcounter{footnote}{\value{dfootnote}}%
    \renewcommand*{\thefootnote}{\textcolor{reddy}{\arabic{footnote}}}%
    }
\newcounter{ddfootnote}
\newcommand*{\ddfootnote}[1]{%
    \setcounter{ddfootnote}{\value{footnote}}%
    \renewcommand*{\thefootnote}{\fnsymbol{footnote}}%
    \footnote[3]{#1}%
    \setcounter{footnote}{\value{ddfootnote}}%
    \renewcommand*{\thefootnote}{\textcolor{reddy}{\arabic{footnote}}}%%
    }

